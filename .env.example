# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=False

# Model Configuration
WHISPER_MODEL=base
NLLB_MODEL=facebook/nllb-200-distilled-600M
TTS_MODEL=tts_models/multilingual/multi-dataset/your_tts

# TTS Provider Configuration
# Options: auto (auto-select), fish_audio (Fish Audio TTS), coqui (Coqui TTS)
TTS_PROVIDER=auto

# Fish Audio TTS Configuration (Optional)
# Get your API key at: https://fish.audio/app/api-keys
# Required only if using Fish Audio TTS provider
FISH_API_KEY=your-fish-audio-api-key-here

# File Configuration
MAX_FILE_SIZE_MB=500
ALLOWED_FORMATS=mp4,avi,mov,mkv
AUTO_DELETE_HOURS=24

# Processing
USE_GPU=False
MAX_WORKERS=2

# Paths
UPLOAD_DIR=uploads
OUTPUT_DIR=outputs
TEMP_DIR=temp

# Security
SECRET_KEY=your-secret-key-here
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
