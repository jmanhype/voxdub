# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=False

# Model Configuration
WHISPER_MODEL=base
NLLB_MODEL=facebook/nllb-200-distilled-600M
TTS_MODEL=tts_models/multilingual/multi-dataset/your_tts

# TTS Provider Selection
# Options: auto (auto-select), coqui (local), fish_audio (cloud), fish_speech (self-hosted)
TTS_PROVIDER=auto

# Fish Audio TTS Configuration (Optional - Cloud-based)
# Get your API key at: https://fish.audio/app/api-keys
# Required only if using Fish Audio TTS provider
FISH_API_KEY=your-fish-audio-api-key-here

# Fish Speech TTS Configuration (Optional - Self-hosted)
# Requires local Fish Speech server running
# Setup script: scripts/setup_fish_speech.sh
FISH_SPEECH_API_URL=http://localhost:8080
FISH_SPEECH_MODEL=s1-mini  # Options: s1, s1-mini
FISH_SPEECH_DEVICE=cuda  # Options: cuda, cpu
FISH_SPEECH_COMPILE=False  # Enable torch.compile for faster inference
FISH_SPEECH_MAX_NEW_TOKENS=1024
FISH_SPEECH_TOP_P=0.7
FISH_SPEECH_TEMPERATURE=0.7
FISH_SPEECH_REPETITION_PENALTY=1.2

# File Configuration
MAX_FILE_SIZE_MB=500
ALLOWED_FORMATS=mp4,avi,mov,mkv
AUTO_DELETE_HOURS=24

# Processing
USE_GPU=False
MAX_WORKERS=2

# Paths
UPLOAD_DIR=uploads
OUTPUT_DIR=outputs
TEMP_DIR=temp

# Security
SECRET_KEY=your-secret-key-here
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
